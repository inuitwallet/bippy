<ResultsScreen>:
	name: app.get_string('Results_Screen')

	BoxLayout:
		orientation: 'horizontal'

		FloatLayout:
			id: mainLayout
			size_hint: (0.735, 1)

			Label:
				id: mainLabel
				size_hint: (None, None)
				width: 700
				height: 150
				pos: (20, 200)

			Label:
				id: topLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 150)

			TextInput:
				id: topField
				size_hint: (None, None)
				width: 540
				height: 30
				pos: (180, 150)
				multiline: False
				readonly: True
				allow_copy: True

			Label:
				id: middleLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (150, 160)

			TextInput:
				id: middleField
				size_hint: (None, None)
				width: 550
				height: 30
				pos: (100, 120)
				multiline: False
				readonly: True
				allow_copy: True


			TextInput:
				id: middleFieldMulti
				size_hint: (None, None)
				width: 550
				height: 60
				pos: (100, 120)
				multiline: True
				readonly: True
				allow_copy: True

			Label:
				id: bottomLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 70)

			TextInput:
				id: bottomField
				size_hint: (None, None)
				width: 400
				height: 30
				pos: (180, 70)
				multiline: False
				readonly: True
				allow_copy: True


		AsyncImage:
			id: image
			source: 'res/images/HomePageImage.png'
			size_hint: (.265, 1)
			allow_stretch: True
			keep_ratio: False
